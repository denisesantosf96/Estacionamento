@model X.PagedList.IPagedList<Veiculo>
@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common;

<table class="table">
        <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Modelo</th>

            <th>Placa</th>
            <th>Cor</th>

            <th></th>
        </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
            <td>@Model[i].Id</td>
            <td>@Model[i].Modelo</td>
            <td>@Model[i].Placa</td>
            <td>@Model[i].Cor</td>
            <td><input type="button" value="Editar" class="btn btn-dark" onclick="javascript:window.location=`/Veiculo/Detalhe/${@Model[i].Id}`">
            <input type="button" value="Excluir" class="btn btn-danger" onclick="Excluir(@Model[i].Id)"></td>
            
            </tr>
            }
        
        </tbody>
    </table>

    @Html.PagedListPager(Model, pagina => Url.Action("Index", new { pagina }))